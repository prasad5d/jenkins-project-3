pipeline {
    agent any

    stages {
        stage('Git checkout') {
            steps {
                git branch: 'branch1', url: 'https://github.com/prasad5d/jenkins-project-3.git'
            }
        }
        stage('terraform init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('terraform plan') {
            steps {
                sh 'terraform plan'
            }
        }
        stage('teraform apply') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }
    }
}
